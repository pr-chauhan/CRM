@model IEnumerable<EntityClass.City>

@{
    ViewBag.Title = "City Master";
}

<h2>City Master</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.State_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.E_UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.M_UserID)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.State_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.E_UserID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.M_UserID)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.City_ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.City_ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.City_ID })
                </td>
            </tr>
        }

    </table>
</div>