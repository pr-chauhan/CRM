@model EntityClass.Item

@{
    ViewBag.Title = "Delete Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Item</h2>

<h3>Are you sure you want to delete this?</h3>
<div style="border: 1px solid #1945d7; border-radius: 5px 5px 5px 5px;">
    <h4>Item</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Tarriff_no)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tarriff_no)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Item_Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Item_Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Full_Desc)
        </dt>

