
@{
    ViewBag.Title = "PartyWiseDateWise";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Party Wise Date Wise</h2>


<div class="row">
    <div class="col-md-12">
        <div class="form-group">


            <div style="width:150px;float:left;">
                <label>Consingnee Name</label>

            </div>
            <div style="width:410px;float:left;">
                 
                <select id="Consignee_ID" class="form-control" style="width: 400px;">
                    <option value="">Select</option>
                    @foreach (var item in ViewBag.CL)
                    {
                            <option value=@item.Consignee_ID>@item.Consignee_Name</option>
                           
                     }
                </select>
            </div>
            <div style="width:100px;float:left;">
                <label>From Date</label>

            </div>
            <div style="width:170px;float:left;">
                <input type="date" id="FromDate" />
            </div>
            <div style="width:75px;float:left;">
                <label>To Date</label>

            </div>
            <div style="width: 100px; float: left;">
                <input type="date" id="ToDate" />
            </div>



        </div>

    </div>




    <div class="form-group" style="width:60%;float:right;">
        <br />
        <br />
        <button type="button" class="btn btn-primary" id="ViewReport">View Report</button>
    </div>

</div>
<script type="text/javascript" src="~/Scripts/jquery-3.6.0.js"></script>
<script type="text/javascript">
    $(function () {
        $("#ViewReport").click(function () {
            var consignee_id = $("#Consignee_ID").val();
            var fromdate = $("#FromDate").val();
            var todate = $("#ToDate").val();
            alert(consignee_id + fromdate + todate);
            $.get("../Reports/DataWiseInvoiceList.aspx", { consignee_id: consignee_id, fromdate: fromdate, todate: todate}, function (data) {
                alert(data);
            });
        });
    });
</script>

