<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="~/Scripts/jquery.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.smartmenus.js"></script>
    <link type="text/css" href="~/Content/sm-blue.css" rel="stylesheet" />
    <link type="text/css" href="~/Content/sm-core-css.css" rel="stylesheet" />
    <!-- SmartMenus jQuery init -->
    <script type="text/javascript">
    	$(function() {
    		$('#main-menu').smartmenus({
    			subMenusSubOffsetX: 1,
    			subMenusSubOffsetY: -8
    		});
    	});
    </script>
</head>
<body>
    <div id="main-nav">
        <ul id="main-menu" class="sm sm-blue">
            <li>@Html.ActionLink("State", "Index", "StateMVC", new { area = "" }, null)</li>
            <li>@Html.ActionLink("City", "Index", "CityMVC", new { area = "" }, null)</li>
            <li>@Html.ActionLink("Item", "Index", "ItemMVC", new { area = "" }, null)</li>
            <li>@Html.ActionLink("Consignee", "Index", "ConsigneeMVC", new { area = "" }, null)</li>
            <li>@Html.ActionLink("User", "Index", "UserDetailMVC", new { area = "" }, null)</li>
            <li>@Html.ActionLink("Change Password", "Index", "ChangePwd", new { area = "" }, null)</li>
            <li>@Html.ActionLink("Database Backup", "Index", "DataBaseBackup", new { area = "" }, null)</li>
            <li>@Html.ActionLink("Invoice Generation", "Index", "InvoiceMVC", new { area = "" }, null)</li>
            <li>@Html.ActionLink("Reports", "Index", "Report", new { area = "" }, null)</li>
            <li>@Html.ActionLink("Logout", "Logout", "UserDetailMVC", new { area = "" }, null)</li>
        </ul>
    </div>


    <div class="container-fluid justify-content-evenly body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Electra Papers Ltd.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
