 @model EntityClass.State

@{
    ViewBag.Title = "Delete State";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete State</h2>

<h3>Are you sure you want to delete this?</h3>
<div style="border: 1px solid #1945d7; border-radius: 5px 5px 5px 5px;">
    <h4>State</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.State_Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State_Name)
            @Html.ValidationMessageFor(model => model.State_ID, "", new { @class = "text-danger" })
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index","", new { @class = "btn btn-primary" })
        </div>
    }
</div>
