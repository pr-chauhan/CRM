@model EntityClass.User_detail

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width">
    <title>Login</title>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/sm-core-css.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style>
        .carousel-inner > .item > img,
        .carousel-inner > .item > a > img {
            width: 70%;
            margin: auto;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="col-md-10">

        </div>
        <div class="col-md-2 col-md-offset-11" >
            @Html.ActionLink("Contact Us", "Index", "ContactMVC", new { area = "" }, null)
        </div>
    </div>
    <div class="container">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Images/fish-insulated-paper-785-w250.jpg" alt="Los Angeles" style="width:40%;height:200px;">
                </div>

                <div class="item">
                    <img src="~/Images/insulating-paper-roll-786-w250.jpg" alt="Chicago" style="width: 40%; height: 200px; ">
                </div>

                <div class="item">
                    <img src="~/Images/slitted-insulating-kraft-papers-793-w250.jpg" alt="New york" style="width: 40%; height: 200px; ">
                </div>
            </div>
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>


    <hr style="height:2px;border-width:0;color:gray;background-color:gray">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div style="text-align: center; font-size: 4em;  font-family: 'Colonna MT'">Electra Paper And Board Private Ltd.</div>
        <div class="container justify-content-evenly body-content">
            <div class="col-md-8">
                @*<blockquote >*@
                <p class="text-justify" style="font-size:19px;">
                    Electra Paper And Board Private Limited is a Private incorporated on 05 June 2007. It is classified as Non-govt company and is registered at Registrar of Companies, Chandigarh. Its authorized share capital is Rs. 20,000,000 and its paid up capital is Rs. 9,667,500. It is inolved in Manufacture of paper and paper product.
                <p class="text-justify" style="font-size:19px;">
                    Directors of Electra Paper And Board Private Limited are Om Parkash Gupta, Manish Gupta, Charu Gupta.
                <p class="text-justify" style="font-size:19px;">
                    Electra Paper And Board Private Limited's Corporate Identification Number is (CIN) U21092PB2007PTC052724 and its registration number is 52724.Its Email address is electrapaper@yahoo.com and its registered address is VILLAGE BATAULI, TEHSIL DERA BASSI DISTT. SAS NAGR, SAS NAGAR Mohali PB 140301 INDIA.
                    <div>
                        <hr style="height:1px;border-width:0;color:gray;background-color:gray">
                        <h5>Electra Paper And Board Private Limited &copy;  </h5>
                    </div>
                    @*</blockquote>*@
            </div>
            <div class="col-md-4">
                <div class="form-horizontal" style="padding: 5%; margin: auto; border: 1px solid #0026ff; border-radius: 1px 1px 1px 2px; box-shadow: 1px 1px 1px 2px;">
                    <h1 style="text-align:center;color:#0026ff;">Login</h1>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.LabelFor(model => model.User_Name, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.User_Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.User_Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.LabelFor(model => model.Passwrd, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Passwrd, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Passwrd,"", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Login" class="btn btn-success" style="width:50%;" />
                            <label style="color:#ff0000;text-align:center;" > @ViewBag.Invalid</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</body>
</html>
